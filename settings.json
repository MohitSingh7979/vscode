{
  /* indentRainbow */
  "indentRainbow.lightIndicatorStyleLineWidth": 10,
  "indentRainbow.indicatorStyle": "classic",
  "indentRainbow.excludedLanguages": [],
  "indentRainbow.updateDelay": 0,
  "indentRainbow.colorOnWhiteSpaceOnly": true /* true */,

  "indentRainbow.colors": [
    "rgba(255, 99, 71, 0.5)", // Tomato
    "rgba(135, 206, 235, 0.5)", // Sky Blue
    "rgba(144, 238, 144, 0.5)", // Light Green
    "rgba(255, 215, 0, 0.5)", // Gold
    "rgba(255, 182, 193, 0.5)", // Light Pink
    "rgba(255, 165, 0, 0.5)", // Orange
    "rgba(75, 0, 130, 0.5)", // Indigo
    "rgba(100, 149, 237, 0.5)", // Cornflower Blue
    "rgba(255, 105, 180, 0.5)", // Hot Pink
    "rgba(173, 216, 230, 0.5)" // Light Blue
  ],

  /* errorLens */

  "errorLens.gutterIconsEnabled": true,
  "errorLens.statusBarIconsEnabled": true,
  "errorLens.delay": 0,
  "errorLens.codeLensEnabled": false,
  "errorLens.enabled": true,
  "errorLens.messageEnabled": true,
  "errorLens.codeLens.color": "red",
  "errorLens.fontSize": "14",
  "errorLens.messageBackgroundMode": "message",

  "errorLens.editorHoverPartsEnabled": {
    "messageEnabled": false,
    "sourceCodeEnabled": false,
    "buttonsEnabled": false
  },

  /* git and gitlens */

  "gitHistory.alwaysPromptRepositoryPicker": true,
  "git.autofetch": true,
  "gitHistory.sideBySide": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "gitlens.currentLine.enabled": false,
  "git.openRepositoryInParentFolders": "always",
  "git.confirmEmptyCommits": false,
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.timeline.showUncommitted": true,
  "gitlens.graph.onlyFollowFirstParent": true,
  "gitlens.graph.dimMergeCommits": true,
  "gitlens.graph.layout": "editor",
  "gitlens.views.commitDetails.files.layout": "tree",

  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "pullRequests",
    "tags"
  ],

  /* editor settings */

  "editor.fontFamily": "Fira Code Regular",
  "editor.autoClosingBrackets": "always",
  "editor.renderWhitespace": "all" /* show dots on spaces */,
  "editor.linkedEditing": true,
  "editor.definitionLinkOpensInPeek": false,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.wordWrap": "on",
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.experimentalInlineEdit.backgroundColoring": true,
  "editor.defaultColorDecorators": true /* extension requirement */,
  "editor.hover.delay": 0 /* 10 */,
  "editor.quickSuggestionsDelay": 0 /* true */,
  "editor.hover.hidingDelay": 0 /* 10 */,
  "editor.experimentalInlineEdit.showToolbar": "always",
  "editor.inlineSuggest.showToolbar": "always",
  "editor.fontLigatures": true,
  "editor.hover.above": false,
  "editor.hover.enabled": false,
  "editor.autoClosingDelete": "always",
  "editor.autoClosingOvertype": "always",
  "editor.minimap.enabled": false,
  "editor.snippets.codeActions.enabled": false,
  "editor.fontSize": 18,
  "editor.suggestFontSize": 14,
  "editor.inlayHints.fontSize": 11,
  "editor.codeLensFontSize": 14,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.unicodeHighlight.includeComments": true,
  "editor.renderLineHighlight": "all",
  "editor.foldingStrategy": "indentation",
  "editor.showFoldingControls": "always",
  "editor.semanticHighlighting.enabled": true /* must be true */,
  "editor.smoothScrolling": true /* needed */,
  "editor.stickyScroll.enabled": false,
  "editor.codeActions.triggerOnFocusChange": true,
  "editor.autoClosingComments": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.autoClosingQuotes": "always",
  "editor.wordBasedSuggestions": "allDocuments",
  "editor.tabCompletion": "on",
  "editor.suggest.showInlineDetails": true,
  "editor.suggest.preview": true,
  "editor.lineDecorationsWidth": 0,
  "editor.glyphMargin": false,
  "editor.suggest.showProperties": true,
  "editor.folding": true,
  "editor.tabFocusMode": false,
  "editor.codeLens": true,
  "editor.inlayHints.enabled": "on",
  "editor.suggestSelection": "recentlyUsed",
  "editor.inlineSuggest.enabled": true,

  "editor.tokenColorCustomizations": {
    /* inbuild customize coloring */
    "comments": {
      "foreground": "#000" /* "#f88" */,
      "fontStyle": "italic"
    }
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "always"
  },

  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },

  /* vim disabled */
  "vim.disableExtension": true,
  "vim.showcmd": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vim.commandLineModeKeyBindings": [],
  "vscode-neovim.ctrlKeysForNormalMode": [],
  "vscode-neovim.ctrlKeysForInsertMode": [],
  "vim.handleKeys": {
    "<C-d>": false,
    "<C-s>": false,
    "<C-z>": false
  },
  "vim.highlightedyank.enable": true,
  "vim.smartRelativeLine": false,
  "vim.statusBarColorControl": true,
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.autoSwitchInputMethod.enable": true,
  "vim.changeWordIncludesWhitespace": true,

  "terminal.integrated.defaultProfile.windows": "PowerShell",
